<div class="bg-graph">
<!-- masthead -->
<div class="masthead masthead-open">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<h1>Sign up</h1>
				<p><strong>One account per individual.</strong>  If you're joining as part of a company/organization, please create an account for each individual.</p>
			</div>
		</div>
	</div>
</div>
<!-- /masthead -->

<!-- section -->
<div class="section-p-sm">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">

				<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-rg' } do |f| %>
				<!-- social log in buttons -->
				<div class="btn-set-social">
					<%= link_to participant_oauth2_generic_omniauth_authorize_path, {class: "btn btn-secondary btn-block"} do%>
		              <img src="/assets/img/icon-crowdai.svg">Sign Up with CrowdAI
		            <% end %>

		            <%= link_to participant_github_omniauth_authorize_path, {class: "btn btn-github btn-block"} do%>
		              <img src="/assets/img/icon-github.svg">Sign Up with GitHub
		            <% end %>
				</div>
				<!-- /social log in buttons -->

				<h4 class="mb-4">Or sign up with email</h4>

				<div class="form-group">
					<label for="username">Choose a user handle</label>
					<%= f.text_field :name, placeholder: 'User handle', class: "form-control", type: 'text', id:"username" %>
					<small id="usernameHelp" class="form-text text-muted">Max. of 255 characters. No spaces</small>
				</div>

				<div class="form-group">
					<label for="email">Email</label>
					<%= f.text_field :email, placeholder: 'Email address', class: 'form-control' %>
				</div>

				<div class="form-group">
					<label for="password">Create a new password</label>
					<%= f.password_field :password, placeholder: 'Choose a password', class: 'form-control' %>
					<small id="passwordHelp" class="form-text text-muted">Min. of 8 characters</small>
				</div>

				<div class="form-group">
					<label for="retypePassword">Re-type new password</label>
					<%= f.password_field :password_confirmation, placeholder: 'Re-type password', class: "form-control" %>
				</div>

        <fieldset class="checkbox">
          <div>
            <%= f.check_box :agreed_to_terms_of_use_and_privacy, { class: 'requires-agreement-checkbox', "data-target": "sign-up-button", id: 'requires-agreement-checkbox'}, "true", "false" %>
            <%= f.label :agreed_to_terms_of_use_and_privacy do %>
              <p>By signing up, I agree to the terms in the
              <%= link_to 'Terms of Use', terms_path %>
              and the <%= link_to 'Privacy Policy', privacy_path %></p>
            <% end %>
          </div>
        </fieldset>
        <fieldset class="checkbox">
          <div>
            <%= f.check_box :agreed_to_marketing, {}, "true", "false" %>
            <%= f.label :agreed_to_marketing do %>
              <p>I agree to receive occasional updates about AIcrowd news, including new challenge launches and other activities (this can be turned off in your settings).</p>
            <% end %>
          </div>
        </fieldset>

          <%= f.button 'Create account', type: 'submit', class: 'btn btn-primary btn-block requires-agreement', id: "sign-up-button", disabled: true %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
	<!-- /section -->

	<!-- section -->
	<div class="section-p-md border-top bg-white">
		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<div class="section-header-mb-sm">
						<h4>Already registered?</h4>
					</div>
					<%= link_to "Log in", new_participant_session_path, {class: "btn btn-secondary", role:"button"} %>
				</div>
			</div>
		</div>
	</div>
	<!-- /section -->
</div>
</div>